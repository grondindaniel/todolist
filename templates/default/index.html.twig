{% extends 'base.html.twig' %}

{% block title %}Hello HomeController!{% endblock %}

{% block body %}

    <!-- Page Content -->
    <div class="container">
        <h2 style="text-align: center; margin-top: -150px;">Bienvenue sur Todo List, l'application vous permettant de gérer l'ensemble de vos tâches sans effort !</h2>
        <div class="row">
            <div class="col-md-12">
                {% for flash_message in app.session.flashBag.get('success') %}
                    <div class="alert alert-success" role="alert">
                        <strong>Superbe !</strong> {{ flash_message }}
                    </div>
                {% endfor %}

                {% for flash_message in app.session.flashBag.get('error') %}
                    <div class="alert alert-danger" role="alert">
                        <strong>Oops !</strong> {{ flash_message }}
                    </div>
                {% endfor %}

                {% block header_title %}{% endblock %}
                {% block header_img %}<img class="slide-image" src="{{ asset('img/todolist_homepage.png') }}" alt="todo list" >{% endblock %}
            </div>
        </div>
    </div>
    <footer style="position: fixed; bottom: -20px;width: 100%; height: 50px; text-align: center;">
        <div class="row">
            <div class="col-lg-12">
                <p class="pull-right">Copyright &copy; Todo & Co</p>
            </div>
        </div>
    </footer>



{% endblock %}
